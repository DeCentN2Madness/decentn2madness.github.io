root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package.json]
insert_final_newline = false

[**.md]
trim_trailing_whitespace = false

[**.{js,html}]
indent_style = tab
indent_size = 2

[**.min.js]
indent_style = false
insert_final_newline = false
